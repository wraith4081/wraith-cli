{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["bun", "node", "vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "@cli/*": ["src/cli/*"],
      "@obs/*": ["src/obs/*"],
      "@util/*": ["src/util/*"],
      "@store/*": ["src/store/*"],
      "@provider/*": ["src/provider/*"],
      "@models/*": ["src/models/*"],
      "@core/*": ["src/core/*"],
      "@rules/*": ["src/rules/*"],
      "@ingest/*": ["src/ingest/*"],
      "@rag/*": ["src/rag/*"],
      "@tools/*": ["src/tools/*"],
      "@render/*": ["src/render/*"],
      "@sessions/*": ["src/sessions/*"],
      "@checkpoints/*": ["src/checkpoints/*"],
      "@tui/*": ["src/tui/*"]
    }
  },
  "include": ["src", "bin", "tests", "bunfig.toml", "vitest.config.ts"]
}

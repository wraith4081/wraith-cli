{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["bun", "node"],
    "baseUrl": ".",
    "paths": {
      "@cli/*": ["src/cli/*"],
      "@obs/*": ["src/obs/*"],
      "@util/*": ["src/util/*"],
      "@store/*": ["src/store/*"],
      "@provider/*": ["src/provider/*"]
    }
  },
  "include": ["src", "bin", "bunfig.toml"]
}
